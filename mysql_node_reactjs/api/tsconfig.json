{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "lib": [
      "es6", "dom", "dom.iterable"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}